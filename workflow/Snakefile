KRAKEN2_DB_BUILD_DONE_FILE = join(KRAKEN2_DB_DIR, "kraken2_db_build.done")
BRACKEN_DB_BUILD_DONE_FILE = join(KRAKEN2_DB_DIR, "bracken_db_build_{readlen}.done")

