TARGET_FILES = []
if INPUT_MODE == "bam":
    INPUT_BAM_FILE = join(INPUT_BAM_DIR, "{umb_basename}.bam")
    INPUT_FASTQ_FILE = join(DATA_DIR, "fastq", "{umb_basename}.fastq")
    INPUT_FASTQ_LOG = join(LOG_DIR, "fastq", "{umb_basename}_fastq.log")

CHM13_FASTA_URL = join(CHM13_URL, CHM13_FASTA_FILENAME)
