BRACKEN_DB_BUILD_LOG = join(
    KRAKEN2_BUILD_LOG_DIR if KRAKEN_MODE == "kraken2" else KRAKENUNIQ_BUILD_LOG_DIR,
    "bracken_db_build_{readlen}.log",
)

BRACKEN_RESULTS_DIR = join(RESULTS_DIR, "bracken")
BRACKEN_LOG_DIR = join(LOG_DIR, "bracken")
