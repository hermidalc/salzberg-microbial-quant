KRAKEN2_CLASSIF_RESULTS_DIR = join(KRAKEN2_RESULTS_DIR, "classif")
KRAKEN2_CLASSIF_LOG_DIR = join(KRAKEN2_LOG_DIR, "classif")

KRAKEN2_DB_TAX_DIR = join(KRAKEN2_DB_DIR, "taxonomy")
KRAKEN2_DB_TAX_LOG = join(KRAKEN2_BUILD_LOG_DIR, "download_taxonomy.log")
KRAKEN2_DB_LIB_DIR = join(KRAKEN2_DB_DIR, "library", "{k2lib}")
KRAKEN2_DB_LIB_LOG = join(KRAKEN2_BUILD_LOG_DIR, "download_{k2lib}.log")
KRAKEN2_DB_BUILD_LOG = join(KRAKEN2_LOG_DIR, "kraken2_db_build.log")
KRAKEN2_DB_TAX_DONE_FILE = join(KRAKEN2_DB_TAX_DIR, "kraken2_db_taxonomy.done")
