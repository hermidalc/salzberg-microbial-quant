KRAKENUNIQ_DB_BUILD_LOG = join(KRAKENUNIQ_LOG_DIR, "krakenuniq_db_build.log")
KRAKENUNIQ_DB_TAX_DONE_FILE = join(KRAKENUNIQ_DB_TAX_DIR, "krakenuniq_db_taxonomy.done")
KRAKENUNIQ_DB_LIB_DONE_FILE = join(KRAKENUNIQ_DB_LIB_DIR, "krakenuniq_db_{kulib}.done")
